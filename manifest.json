{
  "manifest_version": 3,
  "name": "Consume",
  "version": "1.22",
  "description": "Inspired by the film They Live (1988), this extension replaces Buy Now buttons with the dystopian billboard slogans from the film.",
  "icons": {
    "16": "icons/consume-icon-16.png",
    "48": "icons/consume-icon-48.png",
    "128": "icons/consume-icon-128.png"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
