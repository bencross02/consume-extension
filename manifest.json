{
  "manifest_version": 3,
  "name": "Consume",
  "version": "1.23",
  "description": "Automatically replaces purchase-related button labels with random uppercase slogans and applies consistent light-gray, extra-bold styling across all sites.",
  "icons": {
    "16": "icons/consume-icon-16.png",
    "48": "icons/consume-icon-48.png",
    "128": "icons/consume-icon-128.png"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
